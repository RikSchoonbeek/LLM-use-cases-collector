    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Django tests",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "test",
                "--keepdb"
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}/manage.py"
        },
        {
            "name": "Management command: check_subs",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "check_subs"
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}/manage.py"
        }
    ]
}